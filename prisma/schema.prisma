generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model dati {
  id        Int       @id @default(autoincrement()) @db.UnsignedInt
  timestamp DateTime? @default(now()) @db.Timestamp(0)
  co2       Int?
  pm10      Int?
  pm2_5     Int?      @map("pm2.5")
  idMicro   String    @db.Char(17)
  latitude  Float?
  longitude Float?
  micro     micro     @relation("fk1", fields: [idMicro], references: [mac], onUpdate: Restrict, map: "fk1")

  @@index([idMicro], map: "fk1")
}

model micro {
  mac       String    @id @db.Char(17)
  latitude  Float?
  longitude Float?
  dataAvvio DateTime? @default(now()) @db.Timestamp(0)
  attivo    Boolean?  @db.Bit(1)
  dati      dati[]    @relation("fk1")
}

model users {
  id       Int     @id @default(autoincrement()) @db.UnsignedInt
  permessi String  @default("noperms") @db.Char(10)
  nome     String? @unique(map: "nome") @db.Char(50)
  password String? @db.Char(100)
}
